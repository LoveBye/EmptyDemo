<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_view_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mid_transparent_black"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="10pt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pop_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7pt"
                android:text="相册"
                android:textColor="@color/black"
                android:textSize="7pt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2pt"
                android:background="@color/mid_transparent_black" />

            <TextView
                android:id="@+id/tv_pop_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7pt"
                android:text="拍摄"
                android:textColor="@color/black"
                android:textSize="7pt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2pt"
                android:background="@color/mid_transparent_black" />

            <TextView
                android:id="@+id/tv_pop_cancle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="7pt"
                android:text="取消"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>