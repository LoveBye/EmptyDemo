<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20pt">

        <TableRow>

            <TextView
                android:id="@+id/tv_animation"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/rotating_loading"
                android:drawableRight="@drawable/animated_wifi"
                android:gravity="center"
                android:padding="10pt"
                android:text="动画" />

            <TextView
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12dp"
                android:shadowColor="#7000"
                android:shadowDx="12"
                android:shadowDy="12"
                android:shadowRadius="8"
                android:text="shadow"
                android:textSize="40sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12dp"
                android:shadowColor="@color/green"
                android:shadowDx="4"
                android:shadowDy="-4"
                android:shadowRadius="1"
                android:text="blocky"
                android:textColor="@color/purple"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/black"
                android:gravity="center"
                android:padding="12dp"
                android:shadowColor="@color/yellow"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="24"
                android:text="glow"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv_type_face"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10pt"
                android:text="123abcABC"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/tv_gradient"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10pt"
                android:text="123abcABC"
                android:textSize="10pt" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv_cheetah"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10pt"
                android:text="饕餮饕餮"
                android:textSize="20pt" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv_html"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10pt"
                android:textSize="20pt" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv_rainbow"
                android:layout_width="0pt"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10pt"
                android:text="123abcABC"
                android:textSize="20pt" />
        </TableRow>
    </TableLayout>
</ScrollView>